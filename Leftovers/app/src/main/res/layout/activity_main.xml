<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bienvenidos"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/diseno5"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Leftovers"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#5C1D05"
            android:textSize="40sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Encontraras una variedad de recetas dependiendo de los ingredientes que tengas en tu cocina!"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#5C1D05"
            android:textSize="18sp" />

        <Button
            android:id="@+id/b_comenzar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/diseno2"
            android:text="Comenzar"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#FFF5EC"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>